palavra=str(input('insira uma palavra:'))
a=0
e=0
i=0
o=0
u=0
for p in palavra:
    for letra in p:
        if letra.lower() in 'aáãàâ':
            a=a+1
        if letra.lower() in 'eéêèē':
            e=e+1
        if letra.lower() in 'iíîì':
            i=i+1   
        if letra.lower() in 'oóõôò':
            o=o+1
        if letra.lower() in 'uúùûū':
            u=u+1   
print(a,'letras a')
print(e, 'letras e')
print(i,'letras i')
print(o, 'letras o')
print(u,'letras u')
